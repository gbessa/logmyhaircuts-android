<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <Button
            android:text="Launch Camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_launch_camera"
            android:layout_marginTop="47dp"
            android:layout_marginBottom="51dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/frameLayout" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/frameLayout" app:layout_constraintTop_toBottomOf="@+id/button_launch_camera"
            android:layout_marginBottom="65dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/image_from_camera"
                tools:layout_editor_absoluteY="191dp" tools:layout_editor_absoluteX="128dp"/>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>